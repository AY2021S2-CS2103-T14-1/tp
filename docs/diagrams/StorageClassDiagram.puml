@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor STORAGE_COLOR
skinparam classBackgroundColor STORAGE_COLOR

Interface Storage <<Interface>>
Interface UserPrefsStorage <<Interface>>
Interface AddressBookStorage <<Interface>>
Interface CommandHistoryStorage <<Interface>>

Class StorageManager
StorageManager .left.|> Storage
StorageManager *-right-> UserPrefsStorage
StorageManager *--> AddressBookStorage
StorageManager *-up-> CommandHistoryStorage

Class JsonUserPrefsStorage
JsonUserPrefsStorage .left.|> UserPrefsStorage

Class JsonAddressBookStorage
JsonAddressBookStorage .left.|> AddressBookStorage
JsonAddressBookStorage -down-> JsonSerializableAddressBook

Class JsonSerializableAddressBook
JsonSerializableAddressBook -left-> JsonAdaptedIssue
JsonSerializableAddressBook -down-> JsonAdaptedRoom
JsonSerializableAddressBook -down-> JsonAdaptedResident
JsonSerializableAddressBook -down-> JsonAdaptedResidentRoom
JsonSerializableAddressBook -right-> JsonAdaptedAlias

JsonAdaptedRoom -left-> JsonAdaptedTag
JsonAdaptedIssue -down-> JsonAdaptedTag
@enduml
